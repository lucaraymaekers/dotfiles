#!/bin/sh

inp="$(ytlink)"
>&2 printf "inp: %s\n" "$inp"
# notify-send "ytclipo" "downloading <i>$inp</i>" || :

yt-dlp "$inp" \
	--restrict-filenames \
	--embed-chapters \
	-f "b" \
	-S "res:1080" \
	-P "$HOME/vids/youtube/" \
	-o "%(channel)s/%(title)s.%(ext)s"
# notify-send "ytclipo" "finished downloading." || :
