#!/bin/sh

mpvCommand="mpv --no-resume-playback --volume=100"
sounds="$HOME/sync/share/sounds"

if [ "$1" ]; then
    $mpvCommand "$sounds"/avert1.ogg &
    herbe '202020' 'avert!' &
    sleep 20s
    $mpvCommand "$sounds"/avert2.ogg &
    herbe '202020' 'stop averting' &

    exit
fi

while true; do
    sleep 20m
    $mpvCommand "$sounds"/avert1.ogg &
    herbe '202020' 'avert!' &
    sleep 20s
    $mpvCommand "$sounds"/avert2.ogg &
    herbe '202020' 'stop averting' &
done
