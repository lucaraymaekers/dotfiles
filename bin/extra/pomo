#!/bin/sh
notif() { notify-send -t 1000 -w "pomo" "$1"; }

for msg in "three" "two" "one"
do notif "$msg"
done

# $1: time in seconds
# $2: msg for notification
ring_ring()
{
	date '+%R B'
	notify-send -w "$(($1*1000*60))" -u critical "pomo" "$2"
}

i="${1-0}"
while true

do 
	notif "<b>START</b>"
	date '+%R S'
	sleep 20m
	if [ "$i" -eq 3 ]
	then
		i=0
		ring_ring 20 "GIGA BREAK TIME"
	else
		ring_ring 5 "BREAK TIME"
		i=$((i+1))
	fi
done
