#!/bin/sh
notif() { notify-send -t 1000 "pomo" "$1"; sleep 1; }

for msg in "three" "two" "one"
do notif "$msg"
done

i="${1-0}"
while true

do 
	notif "<b>START</b>"
	date '+%R S'
	sleep 20m
	date '+%R B'
	if [ "$i" -eq 3 ]
	then
		notify-send -u critical -t 1200000 "pomodoro" "GIGA BREAK TIME"
		sleep 20m
		i=0
	else
		notify-send -u critical -t 300000 "pomodoro" "BREAK TIME"
		sleep 5m
		i=$((i+1))
	fi
done
