#!/bin/sh
if [ "$MENUCMD" = "tofi" ]
then
	menucmd="tofi --width 10% --height 13% --padding-left 2%" 
elif [ "$MENUCMD" = "dmenu" ]
then
	menucmd="dmenu -g 2 -l 2"
else
	menucmd="fzf"
fi

choices="poweroff\nreboot\nhibernate\nsuspend"
choice="$(printf "$choices" | $menucmd)"
test -z "$choice" || systemctl "$choice"
